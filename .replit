modules = ["python-3.11"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["libxcrypt", "redis"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn api.main:app --host 0.0.0.0 --port 5000"
waitForPort = 5000

[deployment]
deploymentTarget = "cloudrun"
run = ["bash", "start.sh"]
